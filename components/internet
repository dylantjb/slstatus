#!/bin/sh

# Show wifi ï¦¡ and percent strength or ï¤º if none.
# Show ï›¦ if connected to ethernet or ï›§ if none.

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="ï¤º " ;;
	up) wifiicon="$(awk '/^\s*w/ { print "ï¦¡", int($3 * 100 / 70) "%" }' /proc/net/wireless)" ;;
esac

printf "%s%s%s\n" "$wifiicon" "$(sed "s/down/ï›§/;s/up/ï›¦/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ðŸ”’/" /sys/class/net/tun*/operstate 2>/dev/null)"
